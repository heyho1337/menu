{# templates/admin/menu_crud_form_theme.html.twig #}
{% extends '@EasyAdmin/crud/form_theme.html.twig' %}

{% block form_start %}
    {#
      We replicate the original form_start block here but inject the data-controller attribute.
      Use form.vars.action, form.vars.method etc. from the form variable available in the context.
    #}
    <form name="{{ form.vars.name }}"
          method="{{ form.vars.method|lower == 'get' ? 'get' : 'post' }}"
          action="{{ form.vars.action }}"
          {% if form.vars.attr.id is not empty %}id="{{ form.vars.attr.id }}"{% endif %}
          {% for attrname, attrvalue in form.vars.attr %}
              {% if attrname != 'id' %} {{ attrname }}="{{ attrvalue }}"{% endif %}
          {% endfor %}
          data-controller="admin--menu-type"
          {% if form.vars.method|lower != 'get' and form.vars.method|lower != 'post' %}
              >
              <input type="hidden" name="_method" value="{{ form.vars.method }}">
          {% else %} >
          {% endif %}
{% endblock %}

